<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @game.date %>
</p>

<p>
  <strong>White:</strong>
  <%= link_to(@game.white.name, :controller => 'players', :action => 'show', :id => @game.white.id) %>
</p>

<p>
  <strong>Black:</strong>
  <%= link_to(@game.black.name, :controller => 'players', :action => 'show', :id => @game.black.id) %>
</p>

<p>
  <strong>Movetext:</strong>
  <%= @game.movetext %>
</p>

<br/>

<%= form_tag game_path(@game), method: :put, multipart: true do %>
  <label for="file">Enter a comment</label> <%= text_field_tag "comment" %>
  <%= submit_tag "Submit" %>
<% end %>

<br/>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>

<br/>

<table>
  <thead>
    <tr>
      <th>User ID</th>
      <th>Comment</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @game.comments&.each do |comment| %>
      <tr>
        <td><%= comment.userId %></td>
        <td><%= comment.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
