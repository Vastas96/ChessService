<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @game.date %>
</p>

<p>
  <strong>White:</strong>
  <%= link_to(@game.white.name, :controller => 'players', :action => 'show', :id => @game.white.id) %>
</p>

<p>
  <strong>Black:</strong>
  <%= link_to(@game.black.name, :controller => 'players', :action => 'show', :id => @game.black.id) %>
</p>

<p>
  <strong>Movetext:</strong>
  <%= @game.movetext %>
</p>

<%= form_tag '/games/update', :multipart => true do %>
  <%= form_for(game) do |f| %>
    <div class="field">
	  <%= f.label :movetext %>
	  <%= f.text_field :movetext %>
	</div>
  <%= end %>
  <%= submit_tag "Submit" %>
<% end %>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>
