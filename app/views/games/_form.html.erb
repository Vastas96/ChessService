<%= form_for(game) do |f| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>

  <div class="field">
    <%= f.label :white %>
    <%= f.select :white_id, options_for_select(Player.all.map{|p|[p.name, p.id]}) %>
  </div>

  <div class="field">
    <%= f.label :black %>
    <%= f.select :black_id, options_for_select(Player.all.map{|p|[p.name, p.id]}) %>
  </div>

  <div class="field">
    <%= f.label :movetext %>
    <%= f.text_field :movetext %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
